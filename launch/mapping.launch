<?xml version="1.0"?>
<launch>
	<node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0.20 0 0 0 0 0 base_link laser 50" />

	<!-- rplidar -->
	<include file="$(find mobile)/launch/robo_rplidar.launch" />
	
	<!-- hardware -->
	<node pkg="mobile" type="hardware_node" name="robo_hardware" output="screen">
	</node>
	
	<!-- teleop -->
	<node pkg="mobile" type="teleop_node" name="robo_teleop">
	</node>
		
	<!-- gmapping -->
	<node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
		<param name="map_update_interval" value="0.5" />
		<param name="maxUrange" value="6.0" />
		<param name="maxRange" value="8.0" />
		<param name="linearUpdate" value="0.05" />
		<param name="angularUpdate" value="0.5" />
		<param name="odom_frame" value="odom" />
		<param name="base_frame" value="base_link" />
	</node>
	
</launch>
